<!doctype html>
<html lang="en">
  <head>
    <title>Quoting Dojo</title>

    <meta charset="utf-8">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  </head>
  <body>
      <div class="container">
            <% if(messages.quotes) {%>
                <div class="alert alert-danger">
                    <% for (var message of messages.quotes) {%>
                        <p><%= message %></p>
                    <% }%>

                </div>
            <% }%>


            
          <h1>Welcome to Quoting Dojo</h1>
          <form action="/quotes/new" method="POST">
            <input type="text" class="form-control" placeholder="Your name" name="name">
            <textarea name="quote" placeholder="Type quote here" class="form-control"></textarea>
            <button class="btn btn-success" type="submit">Add my Quote</button>
            <a href="/quotes/show"><button class="btn btn-primary">Skip to Quotes</button></a>
          </form>
      </div>
  </body>
</html>